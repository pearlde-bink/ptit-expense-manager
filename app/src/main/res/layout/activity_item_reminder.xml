<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/rounded_background"
    android:layout_marginBottom="8dp">

<!--    startDate-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reminder_startDate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Reminder date: 16 May 2024"
        android:textSize="15dp"
        android:textColor="@color/DimGray"
        ></TextView>


    <!-- More Button (Three Dots) -->
    <ImageView
        android:id="@+id/more_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/more"
        android:contentDescription="More Options"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/reminder_startDate" />

<!--    title-->
    <TextView
        android:id="@+id/reminder_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bill payment"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/reminder_startDate"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"/>

<!--    state-->
    <TextView
        android:id="@+id/reminder_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due on"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/reminder_title" />


    <!-- Amount -->
    <TextView
        android:id="@+id/reminder_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="200$"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reminder_title"
        app:layout_goneMarginTop="8dp"/>

    <!--    endDate-->
    <TextView
        android:id="@+id/reminder_endDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="200$"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reminder_state"
        app:layout_goneMarginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>